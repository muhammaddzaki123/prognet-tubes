<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="prognet.controller.SettingsController" spacing="20" styleClass="content-card"
    stylesheets="@styles.css" maxWidth="450" prefWidth="400"
    style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(139, 92, 246, 0.3), 20, 0, 0, 5);">

    <padding>
        <Insets top="25" right="30" bottom="25" left="30" />
    </padding>

    <!-- Header -->
    <Label text="Game Settings" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #8B5CF6;">
        <VBox.margin>
            <Insets bottom="10" />
        </VBox.margin>
    </Label>

    <!-- Grid Size -->
    <VBox spacing="12">
        <children>
            <Label text="Grid Size" style="-fx-font-size: 14; -fx-text-fill: #666666;" />
            <HBox spacing="10" alignment="CENTER_LEFT">
                <children>
                    <Button fx:id="gridSize4x4Btn" text="4x4" onAction="#onSelectGridSize4x4"
                        styleClass="setting-option-btn-selected" prefWidth="90" prefHeight="40" />
                    <Button fx:id="gridSize6x6Btn" text="6x6" onAction="#onSelectGridSize6x6"
                        styleClass="setting-option-btn" prefWidth="90" prefHeight="40" />
                    <Button fx:id="gridSize8x8Btn" text="8x8" onAction="#onSelectGridSize8x8"
                        styleClass="setting-option-btn" prefWidth="90" prefHeight="40" />
                </children>
            </HBox>
        </children>
    </VBox>

    <!-- Theme -->
    <VBox spacing="12">
        <children>
            <Label text="Theme" style="-fx-font-size: 14; -fx-text-fill: #666666;" />
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>
                <children>
                    <Button fx:id="themeJungleBtn" text="Jungle" onAction="#onSelectThemeJungle"
                        styleClass="setting-option-btn-selected" prefWidth="140" prefHeight="40"
                        GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="Infinity" />
                    <Button fx:id="themeForestBtn" text="Forest" onAction="#onSelectThemeForest"
                        styleClass="setting-option-btn" prefWidth="140" prefHeight="40" GridPane.columnIndex="1"
                        GridPane.rowIndex="0" maxWidth="Infinity" />
                    <Button fx:id="themeSavannaBtn" text="Savanna" onAction="#onSelectThemeSavanna"
                        styleClass="setting-option-btn" prefWidth="140" prefHeight="40" GridPane.columnIndex="0"
                        GridPane.rowIndex="1" maxWidth="Infinity" />
                    <Button fx:id="themeOceanBtn" text="Ocean" onAction="#onSelectThemeOcean"
                        styleClass="setting-option-btn" prefWidth="140" prefHeight="40" GridPane.columnIndex="1"
                        GridPane.rowIndex="1" maxWidth="Infinity" />
                </children>
            </GridPane>
        </children>
    </VBox>

    <!-- Card Back Pattern -->
    <VBox spacing="12">
        <children>
            <Label text="Card Back Pattern" style="-fx-font-size: 14; -fx-text-fill: #666666;" />
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50" />
                    <ColumnConstraints percentWidth="50" />
                </columnConstraints>
                <children>
                    <Button fx:id="patternPawsBtn" text="Paws" onAction="#onSelectPatternPaws"
                        styleClass="setting-option-btn-selected" prefWidth="140" prefHeight="40"
                        GridPane.columnIndex="0" GridPane.rowIndex="0" maxWidth="Infinity" />
                    <Button fx:id="patternLeavesBtn" text="Leaves" onAction="#onSelectPatternLeaves"
                        styleClass="setting-option-btn" prefWidth="140" prefHeight="40" GridPane.columnIndex="1"
                        GridPane.rowIndex="0" maxWidth="Infinity" />
                    <Button fx:id="patternStripesBtn" text="Stripes" onAction="#onSelectPatternStripes"
                        styleClass="setting-option-btn" prefWidth="140" prefHeight="40" GridPane.columnIndex="0"
                        GridPane.rowIndex="1" maxWidth="Infinity" />
                    <Button fx:id="patternGeometricBtn" text="Geometric" onAction="#onSelectPatternGeometric"
                        styleClass="setting-option-btn" prefWidth="140" prefHeight="40" GridPane.columnIndex="1"
                        GridPane.rowIndex="1" maxWidth="Infinity" />
                </children>
            </GridPane>
        </children>
    </VBox>
</VBox>