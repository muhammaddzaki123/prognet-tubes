<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Line?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="prognet.controller.SettingsController" spacing="20" styleClass="content-card" stylesheets="@styles.css"
    maxWidth="450" maxHeight="0">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <children>
            <Label text="âš™" style="-fx-font-size: 32;" />
            <Label text="Settings" styleClass="title-purple">
                <style>
                    -fx-font-size: 28;
                </style>
            </Label>
        </children>
    </HBox>

    <!-- Divider -->
    <Line endX="370" style="-fx-stroke: #cccccc;" />

    <!-- Sound Effects -->
    <VBox spacing="10">
        <children>
            <Label text="ðŸ”Š Sound Effects" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            <HBox alignment="CENTER_LEFT" spacing="15">
                <children>
                    <Label text="Volume" styleClass="label-secondary" />
                    <Slider fx:id="soundVolumeSlider" min="0" max="100" value="70" prefWidth="200" showTickMarks="false"
                        showTickLabels="false" />
                    <Label fx:id="soundVolumeLabel" text="70%" styleClass="label-secondary"
                        style="-fx-min-width: 40; -fx-alignment: center-right;" />
                </children>
            </HBox>
            <CheckBox fx:id="soundEffectsCheckBox" text="Enable sound effects" selected="true"
                style="-fx-font-size: 14; -fx-text-fill: #666666;" />
        </children>
    </VBox>

    <!-- Background Music -->
    <VBox spacing="10">
        <children>
            <Label text="ðŸŽµ Background Music"
                style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            <HBox alignment="CENTER_LEFT" spacing="15">
                <children>
                    <Label text="Volume" styleClass="label-secondary" />
                    <Slider fx:id="musicVolumeSlider" min="0" max="100" value="50" prefWidth="200" showTickMarks="false"
                        showTickLabels="false" />
                    <Label fx:id="musicVolumeLabel" text="50%" styleClass="label-secondary"
                        style="-fx-min-width: 40; -fx-alignment: center-right;" />
                </children>
            </HBox>
            <CheckBox fx:id="backgroundMusicCheckBox" text="Enable background music" selected="true"
                style="-fx-font-size: 14; -fx-text-fill: #666666;" />
        </children>
    </VBox>

    <!-- Animations -->
    <VBox spacing="10">
        <children>
            <Label text="âœ¨ Animations" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333333;" />
            <CheckBox fx:id="animationsCheckBox" text="Enable animations" selected="true"
                style="-fx-font-size: 14; -fx-text-fill: #666666;" />
        </children>
    </VBox>

    <!-- Divider -->
    <Line endX="370" style="-fx-stroke: #cccccc;" />

    <!-- Buttons -->
    <HBox alignment="CENTER" spacing="15">
        <children>
            <Button fx:id="saveBtn" text="ðŸ’¾ Save" onAction="#onSave" styleClass="btn-green" prefWidth="150" />
            <Button fx:id="cancelBtn" text="âœ– Cancel" onAction="#onCancel" styleClass="btn-purple-outline"
                prefWidth="150" />
        </children>
        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>
    </HBox>
</VBox>