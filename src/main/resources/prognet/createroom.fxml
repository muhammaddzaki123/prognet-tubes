<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootContainer" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="prognet.controller.CreateRoomController" styleClass="root-container" stylesheets="@styles.css">
    <children>
        <!-- Include Decorative Animals -->
        <fx:include source="base.fxml" />

        <!-- Main Content Card -->
        <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="content-card" maxWidth="600" maxHeight="650">
            <children>
                <!-- Header with Back Button and Settings -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <!-- Back Button -->
                        <Button fx:id="backBtn" text="â†  Back" onAction="#onBack" styleClass="btn-back">
                        </Button>

                        <!-- Spacer -->
                        <StackPane HBox.hgrow="ALWAYS" />

                        <!-- Settings Button -->
                        <Button fx:id="settingsBtn" text="âš™" onAction="#onSettings" styleClass="btn-settings">
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10" />
                    </VBox.margin>
                </HBox>

                <!-- Title -->
                <Label text="Create Room" styleClass="title-green">
                    <VBox.margin>
                        <Insets bottom="10" />
                    </VBox.margin>
                </Label>

                <!-- Player Name Input -->
                <VBox alignment="CENTER" spacing="8">
                    <children>
                        <Label text="Your Name" styleClass="label-secondary" />
                        <TextField fx:id="playerNameField" promptText="Enter your name"
                            style="-fx-background-color: white; -fx-border-color: #10B981; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 12; -fx-font-size: 14; -fx-max-width: 300;" />
                        <Button fx:id="createRoomBtn" text="Create Room" onAction="#onCreateRoom"
                            style="-fx-background-color: #10B981; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 10; -fx-cursor: hand; -fx-padding: 12 40 12 40;" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="15" />
                    </VBox.margin>
                </VBox>

                <!-- Room Info Section (hidden initially) -->
                <VBox fx:id="roomInfoSection" visible="false" managed="false" spacing="20">
                    <children>
                        <VBox alignment="CENTER" spacing="15" styleClass="green-section">
                            <children>
                                <!-- Room Code Label -->
                                <Label text="Room Code" styleClass="label-secondary">
                                </Label>

                                <!-- Room Code Display -->
                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <Label fx:id="roomCode1" text="5" styleClass="room-code-digit">
                                        </Label>
                                        <Label fx:id="roomCode2" text="7" styleClass="room-code-digit">
                                        </Label>
                                        <Label fx:id="roomCode3" text="2" styleClass="room-code-digit">
                                        </Label>
                                        <Label fx:id="roomCode4" text="5" styleClass="room-code-digit">
                                        </Label>
                                        <Label fx:id="roomCode5" text="8" styleClass="room-code-digit">
                                        </Label>
                                        <Label fx:id="roomCode6" text="1" styleClass="room-code-digit">
                                        </Label>
                                    </children>
                                </HBox>

                                <!-- Copy Code Button -->
                                <Button fx:id="copyCodeBtn" text="ðŸ“‹  Copy Code" onAction="#onCopyCode"
                                    styleClass="btn-copy">
                                </Button>
                            </children>
                            <VBox.margin>
                                <Insets bottom="10" />
                            </VBox.margin>
                        </VBox>

                        <!-- Player 1 (Host) -->
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="green-section">
                            <children>
                                <!-- Player Avatar -->
                                <StackPane>
                                    <Circle radius="25" styleClass="avatar-green" />
                                    <Label text="1"
                                        style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                                </StackPane>

                                <!-- Player Info -->
                                <VBox spacing="2">
                                    <children>
                                        <Label fx:id="player1NameLabel" text="Waiting..."
                                            styleClass="label-player-name">
                                        </Label>
                                        <Label text="Host" styleClass="label-status-green">
                                        </Label>
                                    </children>
                                </VBox>

                                <!-- Spacer -->
                                <StackPane HBox.hgrow="ALWAYS" />

                                <!-- Online Status -->
                                <Circle radius="6" styleClass="status-green" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="10" />
                            </VBox.margin>
                        </HBox>

                        <!-- Player 2 -->
                        <HBox alignment="CENTER_LEFT" spacing="15" styleClass="blue-section">
                            <children>
                                <!-- Player Avatar -->
                                <StackPane>
                                    <Circle radius="25" styleClass="avatar-blue" />
                                    <Label text="2"
                                        style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                                </StackPane>

                                <!-- Player Info -->
                                <VBox spacing="2">
                                    <children>
                                        <Label fx:id="player2NameLabel" text="Waiting for player..."
                                            styleClass="label-player-name">
                                        </Label>
                                        <Label fx:id="player2StatusLabel" text="Not Connected"
                                            styleClass="label-status-blue">
                                        </Label>
                                    </children>
                                </VBox>

                                <!-- Spacer -->
                                <StackPane HBox.hgrow="ALWAYS" />

                                <!-- Online Status -->
                                <Circle radius="6" styleClass="status-blue" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20" />
                            </VBox.margin>
                        </HBox>

                        <!-- Start Game Button -->
                        <Button fx:id="startGameBtn" text="â–¶  Start Game" onAction="#onStartGame"
                            styleClass="btn-start-game" maxWidth="Infinity">
                        </Button>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</StackPane>