<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="prognet.GameSettingsController" spacing="20" styleClass="settings-popup" stylesheets="@styles.css"
    maxWidth="280" prefWidth="280">
    <children>
        <!-- Title -->
        <Label text="Game Settings" styleClass="settings-title">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <!-- Grid Size Section -->
        <VBox spacing="10">
            <children>
                <Label text="Grid Size" styleClass="settings-section-label" />
                <HBox spacing="10">
                    <children>
                        <Button fx:id="grid3x3Btn" text="3x3" styleClass="settings-option-btn" onAction="#onGrid3x3"
                            prefWidth="80" />
                        <Button fx:id="grid4x4Btn" text="4x4" styleClass="settings-option-btn, selected"
                            onAction="#onGrid4x4" prefWidth="80" />
                        <Button fx:id="grid5x5Btn" text="5x5" styleClass="settings-option-btn" onAction="#onGrid5x5"
                            prefWidth="80" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <!-- Theme Section -->
        <VBox spacing="10">
            <children>
                <Label text="Theme" styleClass="settings-section-label" />
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>
                    <children>
                        <Button fx:id="themeJungleBtn" text="Jungle" styleClass="settings-option-btn, selected"
                            onAction="#onThemeJungle" prefWidth="120" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Button fx:id="themeForestBtn" text="Forest" styleClass="settings-option-btn"
                            onAction="#onThemeForest" prefWidth="120" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Button fx:id="themeSavannaBtn" text="Savanna" styleClass="settings-option-btn"
                            onAction="#onThemeSavanna" prefWidth="120" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Button fx:id="themeOceanBtn" text="Ocean" styleClass="settings-option-btn"
                            onAction="#onThemeOcean" prefWidth="120" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>

        <!-- Card Back Pattern Section -->
        <VBox spacing="10">
            <children>
                <Label text="Card Back Pattern" styleClass="settings-section-label" />
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>
                    <children>
                        <Button fx:id="patternPawsBtn" text="Paws" styleClass="settings-option-btn, selected"
                            onAction="#onPatternPaws" prefWidth="120" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Button fx:id="patternLeavesBtn" text="Leaves" styleClass="settings-option-btn"
                            onAction="#onPatternLeaves" prefWidth="120" GridPane.columnIndex="1"
                            GridPane.rowIndex="0" />
                        <Button fx:id="patternStripesBtn" text="Stripes" styleClass="settings-option-btn"
                            onAction="#onPatternStripes" prefWidth="120" GridPane.columnIndex="0"
                            GridPane.rowIndex="1" />
                        <Button fx:id="patternGeometricBtn" text="Geometric" styleClass="settings-option-btn"
                            onAction="#onPatternGeometric" prefWidth="120" GridPane.columnIndex="1"
                            GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets top="25" right="25" bottom="25" left="25" />
    </padding>
</VBox>