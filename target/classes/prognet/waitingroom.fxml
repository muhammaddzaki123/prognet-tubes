<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootContainer" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="prognet.controller.WaitingRoomController" styleClass="root-container" stylesheets="@styles.css">
    <children>
        <!-- Include Decorative Animals -->
        <fx:include source="base.fxml" />

        <!-- Main Content Card -->
        <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="content-card" maxWidth="600" maxHeight="650">
            <children>
                <!-- Header with Back Button -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <!-- Back Button -->
                        <Button fx:id="backBtn" text="←  Leave Room" onAction="#onBack" styleClass="btn-back">
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10" />
                    </VBox.margin>
                </HBox>

                <!-- Title -->
                <Label text="Waiting Room" styleClass="title-blue">
                    <VBox.margin>
                        <Insets bottom="5" />
                    </VBox.margin>
                </Label>

                <!-- Subtitle -->
                <Label text="Connected to room" styleClass="label-secondary">
                    <VBox.margin>
                        <Insets bottom="20" />
                    </VBox.margin>
                </Label>

                <!-- Room Code Section -->
                <VBox alignment="CENTER" spacing="15" styleClass="blue-section">
                    <children>
                        <!-- Room Code Label -->
                        <Label text="Room Code" styleClass="label-secondary">
                        </Label>

                        <!-- Room Code Display -->
                        <HBox alignment="CENTER" spacing="10">
                            <children>
                                <Label fx:id="roomCode1" text="0" styleClass="room-code-digit-blue">
                                </Label>
                                <Label fx:id="roomCode2" text="0" styleClass="room-code-digit-blue">
                                </Label>
                                <Label fx:id="roomCode3" text="0" styleClass="room-code-digit-blue">
                                </Label>
                                <Label fx:id="roomCode4" text="0" styleClass="room-code-digit-blue">
                                </Label>
                                <Label fx:id="roomCode5" text="0" styleClass="room-code-digit-blue">
                                </Label>
                                <Label fx:id="roomCode6" text="0" styleClass="room-code-digit-blue">
                                </Label>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="10" />
                    </VBox.margin>
                </VBox>

                <!-- Player 1 (Host) -->
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="green-section">
                    <children>
                        <!-- Player Avatar -->
                        <StackPane>
                            <Circle radius="25" styleClass="avatar-green" />
                            <Label text="1" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                        </StackPane>

                        <!-- Player Info -->
                        <VBox spacing="2">
                            <children>
                                <Label text="Player 1" styleClass="label-player-name">
                                </Label>
                                <Label text="Host" styleClass="label-status-green">
                                </Label>
                            </children>
                        </VBox>

                        <!-- Spacer -->
                        <StackPane HBox.hgrow="ALWAYS" />

                        <!-- Online Status -->
                        <Circle radius="6" styleClass="status-green" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="10" />
                    </VBox.margin>
                </HBox>

                <!-- Player 2 (You) -->
                <HBox alignment="CENTER_LEFT" spacing="15" styleClass="blue-section">
                    <children>
                        <!-- Player Avatar -->
                        <StackPane>
                            <Circle radius="25" styleClass="avatar-blue" />
                            <Label text="2" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                        </StackPane>

                        <!-- Player Info -->
                        <VBox spacing="2">
                            <children>
                                <Label text="Player 2 (You)" styleClass="label-player-name">
                                </Label>
                                <Label text="Connected" styleClass="label-status-blue">
                                </Label>
                            </children>
                        </VBox>

                        <!-- Spacer -->
                        <StackPane HBox.hgrow="ALWAYS" />

                        <!-- Online Status -->
                        <Circle radius="6" styleClass="status-blue" />
                    </children>
                    <VBox.margin>
                        <Insets bottom="20" />
                    </VBox.margin>
                </HBox>

                <!-- Waiting Message -->
                <VBox alignment="CENTER" spacing="15"
                    style="-fx-background-color: #fff3cd; -fx-background-radius: 15; -fx-padding: 25 30 25 30; -fx-border-color: #ffc107; -fx-border-width: 2; -fx-border-radius: 15;">
                    <children>
                        <Label text="⏳" style="-fx-font-size: 32;">
                        </Label>
                        <Label text="Waiting for host to start the game..." styleClass="label-secondary"
                            textAlignment="CENTER" wrapText="true">
                        </Label>
                        <!-- Animated dots -->
                        <Label fx:id="animatedDots" text="..." style="-fx-font-size: 24; -fx-text-fill: #666666;">
                        </Label>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets top="30" right="40" bottom="40" left="40" />
            </padding>
        </VBox>
    </children>
</StackPane>